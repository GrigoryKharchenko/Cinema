<resources>
    <!-- Base application theme. -->
    <style name="Theme.Cinema" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_color</item>
        <item name="colorSecondaryVariant">@color/background_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.Fragment" parent="Theme.Cinema">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BottomNavigationBar">
        <item name="itemRippleColor">@color/selected_bottom_navigation_bar_icon_color</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_bar</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:background">@drawable/navigation_bar_background</item>
    </style>

    <style name="WhiteBackgroundLayout">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="PreviewBackgroundLayout">
        <item name="android:background">@drawable/preview_background</item>
    </style>

    <style name="NullBackgroundLayout">
        <item name="android:background">@null</item>
    </style>

    <style name="RippleBackground">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="Text" />

    <style name="Text.White">
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="Text.White.BlueBackground">
        <item name="android:background">@drawable/rating_blue_background</item>
    </style>

    <style name="Text.White.BlueBackground.6">
        <item name="android:textSize">@dimen/sp_6</item>
    </style>

    <style name="Text.Black">
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="Text.Black.WhiteBackground">
        <item name="android:background">@drawable/rating_white_background</item>
    </style>

    <style name="Text.Black.WhiteBackground.6">
        <item name="android:textSize">@dimen/sp_6</item>
    </style>


    <style name="Text.Black.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.Black.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Black.18">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textColor">@color/blue_text_color</item>
    </style>

    <style name="Text.Blue.Ripple">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="Text.Black.Bold">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="Text.Black.32">
        <item name="android:textSize">@dimen/sp_32</item>
    </style>

    <style name="Text.Black.Bold.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Black.Bold.18">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textColor">@color/gray_text_color</item>
    </style>

    <style name="Text.Gray.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.HintGray">
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

    <style name="Text.HintGray.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.HintGray.Ripple">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="TitleToolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
    </style>

    <style name="TitleToolbar.BlackBackground" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/black_background_color</item>
    </style>

    <style name="BlackBackground">
        <item name="android:background">@color/black_background_color</item>
    </style>

    <style name="TitleToolbar.TextBlack">
        <item name="titleTextColor">@color/black_text_color</item>
    </style>

    <style name="FabWhite">
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/blue_text_color</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/gray_alfa_30</item>
    </style>

    <style name="WhiteTextCollapsingToolbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TransparentTextCollapsingToolbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TransparentBackGround" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BlackGradientBackGround">
        <item name="android:background">@drawable/black_gradient</item>
    </style>

    <style name="BlueGradientBackGround">
        <item name="android:background">@drawable/blue_gradient</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@drawable/search_input_background</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="SearchLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/gray_text_color</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="OutlinedBlueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/sp_32</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_text_color</item>
    </style>

    <style name="HorizontalRecycler">
        <item name="android:clipToPadding">false</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
