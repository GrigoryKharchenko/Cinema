<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPreview"
        style="@style/NullBackgroundLayout"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_156"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShowAll"
        style="@style/FabWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tvShowAll"
        app:layout_constraintEnd_toEndOf="@id/ivPreview"
        app:layout_constraintStart_toStartOf="@id/ivPreview"
        app:layout_constraintTop_toTopOf="@id/ivPreview"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvShowAll"
        style="@style/Text.Black.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/home_show_all"
        app:layout_constraintBottom_toBottomOf="@id/ivPreview"
        app:layout_constraintEnd_toEndOf="@id/ivPreview"
        app:layout_constraintStart_toStartOf="@id/ivPreview"
        app:layout_constraintTop_toBottomOf="@id/fabShowAll" />

</androidx.constraintlayout.widget.ConstraintLayout>
